 <% div_for listing_truncate do %>
 <hr /> 
 <h2><%= link_to_unless_current listing_truncate.title, listing_truncate %></h2>
 <div id = "indent">  
  <%= truncate(listing_truncate.body, :length => 200) %><br /><br />
 Posted at: <%= listing_truncate.created_at %>
 <% if !listing_truncate.owner?(current_user.id) %>
	  by <strong><%=  h(User.find(listing_truncate.user_id).login) %></strong>
 <% else %>
 	<br /><br /><p><%= link_to_remote 'Delete Listing', :url => listing_path(listing_truncate), :method => :delete, :confirm => 'Are you sure?' %>
 <% end %>
<% end %>
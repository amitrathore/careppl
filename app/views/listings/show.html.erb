<%= render :partial => 'listing', :@collection => @listing %>

<% unless !@applications %>
	<p><strong>People who have applied to this listing</strong></p>
	<div id ="indent">
	<% @applications.each do |application| %>
		<% unless application.user_id == current_user.id %>
			<%= h(User.find(application.user_id).login.capitalize) %><br />
		<% else %>
			You<br />
		<% end %>
	<% end %>
	</div>
<% end %>
<% unless @listing.owner?(current_user.id) %>
<p><%= link_to 'Apply to Listing', applications_url(:listing_id => @listing.id), :method => :post%></p>
<% end %>
<p><%= link_to 'Back' , listings_path %>
<%= link_to 'Edit' , edit_listing_path(@listing) %></p>

<hr />
<% if @comments.count > 0 %>
	<p><strong>Displaying Comments</strong></p>
	<%= render :partial => 'comment', :collection => @comments %>
<% end %>
<%= will_paginate @comments %>
<%= render :partial => 'new_comment' %>
